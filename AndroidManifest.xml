<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kevin.rhythmtaps">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayLevelsActivity"
            android:label="Levels"
            android:parentActivityName=".HomeScreenActivity" />
        <activity android:name=".DisplayBeginnerActivity"
            android:label="Beginner Levels"
            android:parentActivityName=".DisplayLevelsActivity" />
        <activity android:name=".DisplayIntermediateActivity"
            android:label="Intermediate Levels"
            android:parentActivityName=".DisplayLevelsActivity" />
        <activity android:name=".DisplayAdvancedActivity"
            android:label="Advanced Levels"
            android:parentActivityName=".DisplayLevelsActivity" >
        </activity>
    </application>

</manifest>